<div{{ attributes.addClass('font odd') }}>
  <div class="fontyourface-header">
    <h4>{{ font_title }}</h4>
  </div>
  <div class="fontyourface-preview">
    <span class="fontyourface-preview" style="{{- font_style }} font-size: 40px; line-height: 40px">AaGg</span>
  </div>
  <div class="fontyourface-operations">
    {{ operation_links }}
  </div>
</div>
